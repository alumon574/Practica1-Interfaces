<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".activity_new_player">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLh1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_begin="641dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLh2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_begin="641dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLh3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_begin="641dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLh4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_begin="641dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLh5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_begin="641dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLh6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_begin="641dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLh7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1.4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_begin="641dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="84dp"
        app:layout_constraintGuide_percent="0.13"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="84dp"
        app:layout_constraintGuide_percent="0.36"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GLv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="84dp"
        app:layout_constraintGuide_percent="0.52"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/MargenArriba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_begin="641dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/MargenIzquierda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"
        app:layout_constraintGuide_begin="641dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/MargenDerecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"
        app:layout_constraintGuide_begin="641dp"
        app:layout_constraintStart_toStartOf="parent"/>


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/GLh1"
        app:layout_constraintEnd_toStartOf="@id/GLv1"
        app:layout_constraintStart_toEndOf="@id/MargenIzquierda"
        app:layout_constraintTop_toBottomOf="@id/MargenArriba"
        app:srcCompat="@drawable/person_icon" />

    <EditText
        android:id="@+id/nameField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/GLv1"
        app:layout_constraintTop_toBottomOf="@id/MargenArriba"
        app:layout_constraintBottom_toTopOf="@id/GLh1"
        app:layout_constraintEnd_toStartOf="@id/MargenDerecha"
        android:hint="Name"
        />

    <EditText
        android:id="@+id/PhoneticNameField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/GLv1"
        app:layout_constraintTop_toBottomOf="@id/nameField"
        app:layout_constraintBottom_toTopOf="@id/GLh2"
        app:layout_constraintEnd_toStartOf="@id/MargenDerecha"
        android:hint="Phonetic Name"
        />

    <EditText
        android:id="@+id/NicknameField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/GLv1"
        app:layout_constraintTop_toBottomOf="@id/PhoneticNameField"
        app:layout_constraintBottom_toTopOf="@id/GLh3"
        app:layout_constraintEnd_toStartOf="@id/MargenDerecha"
        android:hint="Nickname"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/MargenIzquierda"
        app:layout_constraintBottom_toTopOf="@id/GLh4"
        app:layout_constraintTop_toBottomOf="@id/GLh3"
        app:layout_constraintEnd_toStartOf="@id/GLv1"
        app:srcCompat="@drawable/camera_icon" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/GLv1"
        app:layout_constraintBottom_toTopOf="@id/GLh4"
        app:layout_constraintTop_toBottomOf="@id/GLh3"
        app:layout_constraintEnd_toStartOf="@id/GLv2"
        app:srcCompat="@mipmap/ic_launcher"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/GLv2"
        app:layout_constraintBottom_toTopOf="@id/GLh4"
        app:layout_constraintTop_toBottomOf="@id/GLh3"
        app:layout_constraintEnd_toStartOf="@id/GLv3"
        android:text="change"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/MargenIzquierda"
        app:layout_constraintBottom_toTopOf="@id/GLh5"
        app:layout_constraintTop_toBottomOf="@id/GLh4"
        app:layout_constraintEnd_toStartOf="@id/GLv1"
        app:srcCompat="@drawable/phone"
        />

    <EditText
        android:id="@+id/PhoneField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/GLv1"
        app:layout_constraintTop_toBottomOf="@id/GLh4"
        app:layout_constraintBottom_toTopOf="@id/GLh5"
        app:layout_constraintEnd_toStartOf="@id/MargenDerecha"
        android:hint="Phone number"
        />
    
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toEndOf="@id/GLv1"
        app:layout_constraintBottom_toTopOf="@id/GLh6"
        app:layout_constraintTop_toBottomOf="@id/PhoneField"
        app:layout_constraintEnd_toStartOf="@id/MargenDerecha"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/MargenIzquierda"
        app:layout_constraintBottom_toTopOf="@id/GLh7"
        app:layout_constraintTop_toBottomOf="@id/spinner"
        app:layout_constraintEnd_toStartOf="@id/GLv1"
        app:srcCompat="@drawable/mail"
        />

    <EditText
        android:id="@+id/MailField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/GLv1"
        app:layout_constraintTop_toBottomOf="@id/GLh7"
        app:layout_constraintBottom_toTopOf="@id/GLh6"
        app:layout_constraintEnd_toStartOf="@id/MargenDerecha"
        android:hint="Mail"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>


